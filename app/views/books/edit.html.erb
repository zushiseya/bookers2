<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
        <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |messages| %>
          <li><%= messages %></li>
          <% end %>
        </ul>
      <% end %>
      

      <%=form_with model: @book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
    
        <p><%= f.submit 'Update Book',class: "btn btn-success"%></p>
      <% end %>
      
      <p><%= link_to "Show",book_path(@book.id) %>|<%= link_to "Back",books_path %></p>
    </div>
  </div>
</div>