<h2>User info</h2>
<% if @user.profile_image.attached? %>
  <%=image_tag user.profile_image, size: "100x100" %>
<% else %>
  <%= image_tag 'no_image', size: "100x100" %>
<% end %>
<p>name<%= @user.name %></p>
<p>introduction	<%= @user.introduction %></p>




<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  
  <p>Opinion</p>
  <%=f.text_area :body %>
  
  <%=f.submit 'Create Book' %>
<% end %>